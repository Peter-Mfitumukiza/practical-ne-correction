{
    "swagger": "2.0",
    "info": {
        "title": "Vehicle Management System APIs",
        "version": "1.0.0",
        "description": "API documentation for Vehicle Management System"
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Operations related to authentication"
        },
        {
            "name": "Vehicles",
            "description": "Operations related to vehicles"
        },
        {
            "name": "Vehicle Owners",
            "description": "Operations related to vehicle owner"
        }
    ],
    "servers": [
        {
            "url": "http://localhost:3001"
        }
    ],
    "paths": {
        "/api/v1/auth/register": {
            "post": {
                "summary": "Save user",
                "tags": [
                    "Auth"
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "properties": {
                            "fullname": {
                                "type": "string",
                                "example": "Mfitumukiza Peter"
                            },
                            "email": {
                                "type": "string",
                                "example": "ychag@example.com"
                            },
                            "phoneNumber": {
                                "type": "string",
                                "example": "0987654321"
                            },
                            "nationalId": {
                                "type": "string",
                                "example": "1234567890"
                            },
                            "password": {
                                "type": "string",
                                "example": "random"
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "User saved successfully"
                    },
                    "400": {
                        "description": "Bad request"
                    }
                }
            }
        },
        "/api/v1/auth/login": {
            "post": {
                "summary": "Login user",
                "tags": [
                    "Auth"
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in":"body",
                        "name":"body",
                        "properties":{
                            "email":{
                                "type":"string",
                                "example": "ychag@example.com"
                            },
                            "password":{
                                "type":"string",
                                "example": "random"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Logged in successfully"
                    },
                    "400": {
                        "description": "Bad request"
                    }
                }
            }
        },
        "/api/v1/vehicles/register": {
            "post": {
                "summary": "Register a vehicle",
                "tags": [
                    "Vehicles"
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "type": "string",
                        "description": "Authentication token in the format `Bearer {token}`",
                        "required": true
                    },
                    {
                        "in":"body",
                        "name":"body",
                        "properties":{
                            "chasisNumber":{
                                "type":"string",
                                "example": "ANS1234H"
                            },
                            "manufacturer":{
                                "type":"string",
                                "example": "Toyota"
                            },
                            "manufactureYear":{
                                "type":"number",
                                "example": 2004
                            },
                            "price":{
                                "type":"number",
                                "example": 300000
                            },
                            "plateNumber":{
                                "type":"string",
                                "example": "rac023m"
                            },
                            "modelName":{
                                "type":"string",
                                "example": "mayback 2023"
                            },
                            "ownerNationalId":{
                                "type":"string",
                                "example": "1234567890123456"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Logged in successfully"
                    },
                    "400": {
                        "description": "Bad request"
                    }
                }
            }
        },
        "/api/v1/vehicles/": {
            "get": {
                "summary": "Get vehicles",
                "tags": [
                    "Vehicles"
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "type": "string",
                        "description": "Authentication token in the format `Bearer {token}`",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "success"
                    },
                    "401":{
                        "description": "unauthorized"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/api/v1/vehicles/with-owners": {
            "get": {
                "summary": "Get vehicles with their owners",
                "tags": [
                    "Vehicles"
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "type": "string",
                        "description": "Authentication token in the format `Bearer {token}`",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "success"
                    },
                    "401":{
                        "description": "unauthorized"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/api/v1/owners/register": {
            "post": {
                "summary": "Register a vehicle owner",
                "tags": [
                    "Vehicle Owners"
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "type": "string",
                        "description": "Authentication token in the format `Bearer {token}`",
                        "required": true
                    },
                    {
                        "in":"body",
                        "name":"body",
                        "properties":{
                            "fullname":{
                                "type":"string",
                                "example": "Mfitumukiza Peter"
                            },
                            "nationalId":{
                                "type":"string",
                                "example": "1234567890123456"
                            },
                            "phoneNumber":{
                                "type":"string",
                                "example": "0791176742"
                            },
                            "address":{
                                "type":"string",
                                "example": "Rusizi"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Logged in successfully"
                    },
                    "400": {
                        "description": "Bad request"
                    }
                }
            }
        },
        "/api/v1/owners": {
            "get": {
                "summary": "Get owners",
                "tags": [
                    "Vehicle Owners"
                ],
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "header",
                        "name": "Authorization",
                        "type": "string",
                        "description": "Authentication token in the format `Bearer {token}`",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "success"
                    },
                    "401":{
                        "description": "unauthorized"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        }
    }
}